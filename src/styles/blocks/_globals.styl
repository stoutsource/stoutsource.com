section
  padding-bottom: 30px

h1, h2, h3, h4, h5
  margin 0

// Section title
.section-title
  text-align center

  h1
    margin 15px
    color #fff
    text-transform uppercase
    display inline-block

    &:before
      content "/ "
      color $gold

// Scrollbar (webkit only)
::-webkit-scrollbar
  background #eee
  width 16px

::-webkit-scrollbar-thumb
  background $brown
  border 3px solid #eee

  &:hover
    background lighten($brown, 40%)

::-webkit-scrollbar-corner
  background: #eee

// Button
.btn
  display inline-block
  padding 5px 10px
  outline none
  background none
  border 2px solid lighten($brown, 20%)
  color #fff
  transition box-shadow .25s, color .25s
  box-shadow inset 0 0 lighten($brown, 20%)

  &:focus
  &:hover
    text-decoration none
    color #fff
    box-shadow inset 0 -45px lighten($brown, 20%)

  &:focus
    outline 2px solid lighten($brown, 40%)

  &--bg
    font-size 24px
    border 4px solid lighten($brown, 20%)

    &:hover
      box-shadow inset 0 -45px lighten($brown, 20%)

// Social icons
.social__icon
  font-size 20px
  line-height 20px

  &:link
  &:visited
  &:active
    display inline-block
    color: $gold

  &:hover
  &:focus
    text-decoration none
    color #fff

  &:focus
    outline 1px solid darken($gold, 20%)