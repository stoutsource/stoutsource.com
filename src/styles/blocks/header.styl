@import "../components/variables"

.header
  display flex
  align-items center
  justify-content: space-between
  height 60px
  padding 0 40px
  border-bottom 1px solid #eee
  font-size 22px

  &__menu
    height 100%
    display flex

  &__link
    &:link
    &:visited
    &:active
      display flex
      align-items center
      font-size 14px
      padding 0 40px
      color: $brown
      will-change box-shadow, color
      transition box-shadow .25s, color .25s
      box-shadow inset 0 0 $gold

    &:hover
    &:focus
      text-decoration none
      color #000
      box-shadow inset 0 -60px $gold

    &:focus
      outline 1px solid darken($gold, 20%)
