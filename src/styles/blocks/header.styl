.header
  display flex
  align-items center
  justify-content: space-between
  width 100%
  height 60px
  padding 0 40px
  background #fff
  font-size 22px

  &__menu
    height 100%
    display flex

  &__link
    color: $brown

    &:link
    &:visited
    &:active
      display flex
      align-items center
      font-size 14px
      padding 0 40px
      will-change box-shadow, color
      transition box-shadow .25s, color .25s
      box-shadow inset 0 0 $gold

    &:hover
    &:focus
      text-decoration none
      color #000
      box-shadow inset 0 -60px $gold

    &:focus
      outline 1px solid darken($gold, 20%)
