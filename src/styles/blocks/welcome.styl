.welcome
  position relative
  display flex
  align-items center
  justify-content center
  min-height 700px
  height calc(100vh - 60px) // 60px - menu height
  max-height 1200px
  background $brown url('https://images.unsplash.com/photo-1483817101829-339b08e8d83f?dpr=1&auto=format&fit=crop&w=1500&h=1083&q=80&cs=tinysrgb') no-repeat 50% 50% // Creative Common licensed image (temporary)
  background-size cover

  @media (max-width $xs)
    min-height 100%

  &:after
    content ''
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background rgba($brown, .3)
    z-index 0

  &__message
    text-align center
    font-size 62px
    font-weight bold
    color #fff
    z-index 1

    @media (max-width $sm)
      font-size 42px

    @media (max-width $xs)
      font-size 30px

  &__btn
    margin-top 40px

  &__scroll
    position absolute
    bottom 30px
    left 0
    right 0
    margin auto
    width 30px
    height 50px
    border 3px solid #fff
    border-radius 20px
    animation scroll 2s infinite
    z-index 1

    &:after
      content ''
      display block
      position absolute
      width 4px
      height 10px
      border-radius 2px
      background #fff
      top 10px
      left 0
      right 0
      margin auto
      z-index 1
